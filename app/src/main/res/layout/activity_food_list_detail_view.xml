<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodListDetailView">


    <RelativeLayout
        android:id="@+id/foodTextViewContainer"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/food_image_view"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerInside"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="126dp" />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_image_view"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Food Name"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Product Description"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_des"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Food Price"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cartBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/food_image_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="346dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="186dp"
            android:background="@drawable/roundbutton"
            android:src="@drawable/ic_arrow_back"
            android:drawablePadding="40sp"
            android:textAllCaps="false"
            android:textSize="23dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/addToCartBtn"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodTextViewContainer"
        app:layout_constraintVertical_bias="0.145" />

    <Button
        android:id="@+id/messageBtn"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button"
        android:text="Message"
        android:textAllCaps="false"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodTextViewContainer"
        app:layout_constraintVertical_bias="0.145" />


</androidx.constraintlayout.widget.ConstraintLayout>